<div id="<%= dom_id comment %>" class="display-flex bg-success rounded-2 flex-column w-75 mx-auto border border-dark my-2">
        <div class="d-flex flex-row">
          <h2 class="text-primary text-center w-50 mt-1">
            <%= comment.title %>
          </h2>
          <h3 class="w-50 me-1 mt-1 text-end">
            <%= comment.created_at.localtime.strftime("%H:%M %m/ %d/ %Y") %>
          </h3>
        </div>
        <div class="d-flex flex-row ms-1 text-secondary border-top border-bottom">
        <h3 class="w-50">
          <%= "#{comment.author_fullname}"%>
        </h3>
        <h3 class="w-50 text-end">
          <%= "#{comment.commentable.class} '#{comment.commentable.title}'" %>
        </h3>
        </div>
        <p class="mx-2" style="font-size: 1.5rem;" >
          <%= comment.body %>
        </p>
</div>
