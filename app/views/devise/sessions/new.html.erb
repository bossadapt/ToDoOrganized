<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   <% if flash[:alert] %>
        <div class="alert alert-danger"><%= flash[:alert] %></div>
      <% end %>
<div class="d-flex flex-column justify-content-center align-items-center">
    <div class="d-flex flex-column w-25-75 h-25 mb-1 mt-2">
      <h3 class="text-primary mb-0">Email</h3>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="d-flex flex-column w-25-75 mb-2 mt-2">
      <h3 class="text-primary  mb-0">Password</h3>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="d-flex flex-row w-25-75 h-25 mb-4 mt-2">
        <%= f.check_box :remember_me,style:";width:6%;"%>
        <h3 class="text-primary ms-2 my-auto" style="width:75%">Remember</h3>
      </div>
    <% end %>

    <%= f.submit "Log In" , class:"btn btn-success text-primary rounded-0 w-25-75 h-25 mb-3"%>
    <%= link_to "Create Account",new_user_registration_path, class:"btn btn-success text-primary rounded-0 w-25-75 h-25 mb-5"%>
  </div>
<% end %>
