<div style="width=100vw">
  <div class="mx-2">
    <h1 class="text-primary">Project Dashboard</h1>
    <hr class="border border-primary border-2 opacity-50 w-50">
    <div id="projects" class="d-flex flex-column w-100" >
      <% for project in current_user.projects %>
      <div class="d-flex flex-row w-100">
        <%= link_to "GOTO" , project_path(project), class:"btn btn-outline-primary me-1 my-1 align-middle",style:" padding-top:auto;padding-bottom:auto", data: { turbo_frame: "_top" }%>
        <div class="flex-grow-1">
          <%= render "projects/project", project: project %>
        </div>
      </div>
      <% end %>
        <%= link_to "Create a New Project", new_project_path, class:"btn btn-secondary w-100 mb-4"%>
    </div>
  </div>
</div>
