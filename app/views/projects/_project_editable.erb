<%= turbo_frame_tag dom_id(project, :edit)  ,style:"width:70%"      do %>

  <div class="d-flex flex-column w-100">
    <% if project.owner.id == current_user.id %>
      <h1>
        <%= link_to project.title, edit_project_path(project), class:"my-auto"%> 
      </h1>
      <% else %>
      <h1  class="text-primary w-100">
        <%= project.title %>
      </h1>
      <% end %>
    <p class="text-primary w-100">
      <% if project.description == "" %>
        No Descrption Provided
      <% else %>
        <%= project.description%>
      <% end %>
    </p>
  </div>
<% end %>