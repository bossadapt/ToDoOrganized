<div class="dropdown">
    <button
      class="btn btn-secondary dropdown-toggle"
      type="button"
      data-bs-toggle="dropdown"
      aria-expanded="false"
    >
      Users
    </button>

    <ul class="dropdown-menu">
      <% @users.each do |user| %>
        <%= link_to user.first_name+" "+user.last_name,
        user_path(user), class: "dropdown-item", data: { turbo_frame:
        "_top" }%> 
      <% end %>
    </ul>
  </div>