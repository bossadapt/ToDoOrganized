<div class="dropdown">
    <button
      class="btn btn-outline-secondary dropdown-toggle w-100 h-100"
      type="button"
      data-bs-toggle="dropdown"
      aria-expanded="false"
    >
      Users
    </button>

    <ul id="<%= project.id.to_s+"_users_dropdown_contents" %>" class="dropdown-menu">
      <% project.users.each do |user| %>
        <li id= "<%= project.id.to_s+"_users_dropdown_contents_"+user.id.to_s %>" class ="d-flex flex-row">
          <%= link_to user.full_name, user_path(user), class: "dropdown-item w-75", data: { turbo_frame: "_top" }%> 
          <% if project.owner.id == current_user.id && user.id != current_user.id %>
            <%= link_to "Kick", kick_from_project_project_path(project,user_id: user.id), class:"btn btn-outline-danger", 
            data: { turbo_method: :delete } %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>