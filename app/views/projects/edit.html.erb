  <%= turbo_frame_tag "project_edit" do %>
    <%= form_with(model: @project) do |form| %>
      <div class="d-flex flex-row w-100">
            <%= form.text_field :title ,class:"my-auto", style:"font-size:2.5rem;width:25vw"%>
            <%= form.text_area :description , style:"width:40vw;margin-right:auto;"%>
