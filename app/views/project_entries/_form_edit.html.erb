<%= form_with model: project_entry, id:"project_entry_update_form" do |form| %>
  <% if project_entry.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(project_entry.errors.count, "error") %> prohibited this project_entry from being saved:</h2>

      <ul>
        <% project_entry.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form.hidden_field :project_id, value: project_entry.project.id %>
  <!-- User inputs-->
  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description , data: { "project-entities-target": "description"} %>
  </div>
  <div>
    <%= form.label :priority, style: "display: block" %>
    <%= form.number_field :priority , data: { "project-entities-target": "priority"} %>
  </div>
  <div>
    <%= form.label :assigned, style: "display: block" %>
    <%= form.collection_select :assigned_id, project_entry.project.users, :id, :full_name, { prompt: "Unassigned" } %>
  </div>
  <div>
    <%= form.submit "Submit"%>
  </div>
<% end %>
